{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "module": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "types": [
      "jest",
      "reflect-metadata",
      "node"
    ],
    "sourceMap": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "types",
    "outDir": "dist/lib",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "downlevelIteration": true
  },
  "include": [
    "src"
  ]
}